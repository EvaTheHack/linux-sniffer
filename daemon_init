PID_FILE=/var/run/daemon_sniffer.pid

DAEMON_NAME="daemon_sniffer"

DAEMON_PATH=DEAMON_PATH_VAR

is_running() {
    if [ -f $PID_FILE ]; then
        pid=$(cat $PID_FILE)
        if [ -d "/proc/$pid" ]; then
            return 0 
        fi
    fi
    return 1 
}

start() {
    if ! is_running; then
        sudo $DAEMON_PATH &
        pid=$!
        echo $pid > $PID_FILE
        echo "Daemon started with PID $pid"
    else
        echo "Daemon is already running"
    fi
}

stop() {
    if is_running; then
        kill $(cat $PID_FILE)
        rm $PID_FILE
        echo "Daemon stopped"
    else
        echo "Daemon is not running"
    fi
}

status() {
    if is_running; then
        echo "Daemon is running with PID $(cat $PID_FILE)"
    else
        echo "Daemon is not running"
    fi
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
        ;;
    status)
        status
        ;;
    *)
        echo "Usage: $0 {start|stop|status}"
        exit 1
esac

exit 0